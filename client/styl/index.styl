html
  background #eee

body
  font 14px sans-serif
  margin 50px 20%

.todo-list
  background #fff
  list-style none
  margin 0
  padding 0

.todo-item
  border-top 1px solid #eee
  padding 8px
  padding-left 24px
  position relative

  &:first-child
    border-top 0

  &:before
    border 1px solid #eee
    content ""
    height 8px
    left 8px
    position absolute
    width 8px
